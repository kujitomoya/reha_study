<h1>会員一覧</h1>

<table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>名前</th>
                <th>メールアドレス</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td><%= link_to customer_path(customer.id) do %>
                      <%= customer.name %></td>
                      <% end %>
                  <td><%= customer.email %></td>
                </tr>
              <% end %>
            </tbody>
</table>