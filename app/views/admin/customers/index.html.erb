<div class="container">
  <h2 class="mt-5">会員一覧</h2>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-hover table-inverse  text-center mt-4 mx-2">
          <thead>
            <tr>
              <th><b>名前</b></th>
              <th><b>メールアドレス</b></th>
              <th><b>ステータス</b></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= link_to admin_customer_path(customer.id) do %>
                    <%= customer.name %></td>
                    <% end %>
                <td><%= customer.email %></td>
                <td><% if customer.is_deleted %>
                      <span style="color:grey;">退会</span>
                    <% else %>
                      <span style="color:limegreen;">有効</span>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <div class="pagination mt-4"><%= paginate @customers %></div>
</div>