<div class="container mt-5">
  <h4>分野一覧・追加</h4>
  <div class="row">
    <div class="col">
      <div class="field mt-3">
        <%= form_with model: @field,url: admin_fields_path do |f| %>
          <%= f.text_field :name, placeholder:"分野名" %>
          <%= f.submit '新規登録', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="card mt-3" style="width: 30rem; ">
      <div class="card-header">
        分野
      </div>
      <% @fields.each do |field| %>
        <div class="col list-group list-group-flush ml-2 py-2">
          <%= field.name %>
          <%= link_to "編集する", edit_admin_field_path(field.id),class: "btn btn-success btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>