    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class ="container mt-5">
  <h2>
    会員情報編集
  </h2>
    <%= form_with model: @customer, url: customer_path,method: :patch do |f| %><br/>
      <table border="0" cellpadding="11" cellspacing="0">
        <tr>
          <th>お名前</th>
          <td><%= f.text_field :name, autofocus: true, placeholder:'変更後の名前を入力', id:"inputName" %></td>
        </tr>
      </table>
      <% if customer_signed_in? && current_customer.id == @customer.id %>
        <div class="mt-3">
          <%= f.submit "保存", class: "btn btn-success" %>
        </div>
        <div class="mt-3">
          <%= link_to "退会する",  unsubscribe_path,class: "btn btn-danger" %>
        </div>
      <% end %>
    <% end %>
</div>