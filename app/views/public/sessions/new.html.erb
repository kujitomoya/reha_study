<div class ="container mt-5">
<h2>ログイン</h2>
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %><br />
          <%= f.email_field :email, :size=>"50", autofocus: true, autocomplete: "email", class:'from-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'パスワード' %><br />
          <%= f.password_field :password, :size=>"50", autofocus: true, autocomplete: "current-password", class:'from-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'ログイン', class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>