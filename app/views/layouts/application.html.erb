<!DOCTYPE html>
<html>
  <head>
    <title>RehaStudy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
      <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-pink bg-pink" style="background-color: #C0C0C0";>
        <div class="container">
          <h2><%= link_to "reha_study",root_path,class: 'nav-link text-dark' %></h2>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
            ようこそ！<%= current_customer.name %>さん
              <li class="nav-item">
                <%= link_to root_path , class: 'nav-link text-dark' do %>
                <span><i class="fa-solid fa-cake-candles"></i>TOP</span>
                <% end %>
              <li class="nav-item">
                <%= link_to my_page_customers_path , class: 'nav-link text-dark' do %>
                <span><i class="fa-solid fa-cake-candles"></i>マイページ</span>
                <% end %>
              <li class="nav-item">
                <%= link_to impressions_path ,class: 'nav-link text-dark' do %>
                <span><i class="fas fa-users"></i>投稿一覧</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_impression_path ,class: 'nav-link text-dark' do %>
                <span><i class="fas fa-users"></i>新規投稿</span>
                <% end %>
              </li>
              <li class="nav-item">
               <%= link_to  destroy_customer_session_path,class: 'nav-link text-dark' ,method: :delete do %>
               <span><i class="fas fa-sign-out-alt"></i>ログアウト</span>
              </li>
              <% end %>
              <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_impressions_path , class: 'nav-link text-dark' do %>
                <span><i class="fa-solid fa-cake-candles"></i>投稿一覧</span>
                <% end %>
                </li>
                 <li class="nav-item">
                <%= link_to admin_customers_path ,class: 'nav-link text-dark' do %>
                <span><i class="fas fa-users"></i>会員一覧</span>
                <% end %>
              </li>
              <li class="nav-item">
               <%= link_to admin_fields_path,class: 'nav-link text-dark' do %>
               <span><i class="fa-solid fa-g"></i>分野一覧</span>
              </li>
              <% end %>

              <li class="nav-item">
               <%= link_to destroy_admin_session_path,class: 'nav-link text-dark' ,method: :delete do %>
               <span><i class="fas fa-sign-out-alt"></i>ログアウト</span>
              <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to new_customer_registration_path,class: 'nav-link text-dark' do  %>
                <span><i class="fas fa-user-plus"></i>新規登録</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to customer_session_path,class: 'nav-link text-dark' do  %>
                <span><i class="fas fa-sign-in-alt"></i>ログイン</span>
                <% end %>
              </li>
                <% end %>
            </ul>
        </div>
      </div>
    </nav>
   </header>
   <main class="m-5">
    <%= yield %>
    </main>
  </body>
</html>
